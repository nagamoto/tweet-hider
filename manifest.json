{
  "manifest_version": 2,
  "name": "Tweet Hider",
  "short_name": "Tw Hider",
  "version": "1.0",
  "description": "hide tweet including too many newline characters",
  "page_action": {
    "default_title": "hide thin tweet",
    "default_icon": {
      "128": "images/icon-128x128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*"
      ],
      "run_at": "document_idle",
      "js": [ "jquery-3.3.1.min.js", "content-script.js" ]
    }
  ],
  "icons": {
    "128": "images/icon-128x128.png"
  }
}
